import javax.swing.JOptionPane;
import java.util.Scanner; 

public class TestKlass
{
    public static void main(String[]args)
    {
        // deklarerar attributen 
        String namn;                                                               
        String adress;
        int r; 
        
        // första dialogrutan för användarinmatning
        namn=JOptionPane.showInputDialog(null,"Ange ditt namn: ", "Vad heter du?", JOptionPane.QUESTION_MESSAGE);                    
        adress=JOptionPane.showInputDialog(null, "Ange adress: ", "Vad har du för adress?", JOptionPane.QUESTION_MESSAGE);  
        String sR=JOptionPane.showInputDialog(null, "Ange registreringsår", "När registrerades du?", JOptionPane.QUESTION_MESSAGE);  
        r=Integer.parseInt(sR);   // typkonvertering från string till int-variabel via metoden parseInt()
        Forening f=new Forening(namn, adress, r); // skapar ett objekt av klassen förening för att spara ned inmatningen  
        JOptionPane.showMessageDialog(null,f.toString());  // dialogruta för att visa inmatad data  
        
        // Användaren ändrar värdet på adressen via get och set metoderna
        Scanner sc=new Scanner(System.in);   // Skapa ett scanner objekt som hanterar input
        System.out.println("Ange adress");    // Be användaren mata in adressen
        adress = sc.nextLine();               // Spara ned och lagra inmatningen som användaren angett
        f.setAdress(adress);                 // Använd Setmetoden för att lägga in inmatningen i variabeln
        JOptionPane.showMessageDialog(null,f.getAdress());  // Visa den inmatade datan via en dialogbox
        
        // En konstruktor som tar emot tre argument och tilldelar dem till lämpliga fält:namn, adress och registreringsår
        int r1; 
        namn=JOptionPane.showInputDialog("Ange ditt namn: ");              
        adress=JOptionPane.showInputDialog("Ange adress: "); 
        String sR1=JOptionPane.showInputDialog("Ange registreringsår!: ");  
        r1=Integer.parseInt(sR1); 
        Forening f1=new Forening(namn, adress, r1);                                
        JOptionPane.showMessageDialog(null,f1.toString());     
        
        
        // En konstruktor som tar emot två argument och tilldelar dem till namn och registreringsår. Adress ska tilldelas en tom sträng (" ").
        int r2;                  
        namn=JOptionPane.showInputDialog("Ange ditt namn: ");  
        String sR2=JOptionPane.showInputDialog("Ange registreringsår!: ");  
        r2=Integer.parseInt(sR2); 
        Forening f2=new Forening(namn, r2);    
        JOptionPane.showMessageDialog(null,f2.toString());   
        
        
        // En konstruktor som tar emot två argument och tilldelar dem till namn och adress.  registreringsår ska tilldelas en värde 0.             
        namn=JOptionPane.showInputDialog("Ange ditt namn: "); 
        adress=JOptionPane.showInputDialog("Ange adress: "); 
        Forening f3=new Forening(namn, adress);   // ett objekt av klassen förening för att lagra värdena i. 
        JOptionPane.showMessageDialog(null,f3.toString());  // dialogruta för att visa inmatad data
        
        // En konstruktor som tar emot ett argument och tilldelar det till namn, tilldela en tom sträng (" ") till adress och 0 till registreringsår.        
        namn=JOptionPane.showInputDialog("Ange ditt namn: ");  
        Forening f4=new Forening(namn);   // ett objekt av klassen förening för att lagra värdena i. 
        JOptionPane.showMessageDialog(null,f4.toString());  // dialogruta för att visa inmatad data
        
        
        //En parameterlös konstruktor som tilldelar tomma strängar (" ") till namn och adress och 0 till registreringsår.
        JOptionPane.showInputDialog("Ange   ");  
        Forening f5=new Forening();   // ett objekt av klassen förening för att lagra värdena i. 
        JOptionPane.showMessageDialog(null,f5.toString());  // dialogruta för att visa inmatad data
        
        
           // 2. Subklassen IdeellFörening som ska ärva av klassen Förening.
           // Användaren skapar här 2 objekt av klassen IdeellFörening. Dialogrutor används för in- och utmatning.
           
           //  Objekt 1 skapas med tillhörande konstruktor  
           int antal1;    // deklarera variabler
           
           namn=JOptionPane.showInputDialog("Ange namn: ");  // dialogbox där användaren matar in namn som lagras i namnvariabeln
           adress=JOptionPane.showInputDialog("Ange adress: ");  // dialogbox där användaren matar in adress som lagras i adressvariabeln
           String sR3 = JOptionPane.showInputDialog("Ange antal medlemmar: "); // dialogbox där användaren matar in antalet medlemmar som lagras i sR3 variabeln
           antal1=Integer.parseInt(sR3);      // parsar string till int (typkonvertering)
           IdeellForening if1=new IdeellForening(namn, adress, antal1);  // användaren skapar ett objekt av klassen IdeellFörening för att lagra värdet i 
           JOptionPane.showMessageDialog(null,if1.toString());    // dialogruta för att visa inmatad användardata
        
           
           //  Objekt 2 skapas med tillhörande konstruktor 
            
           namn=JOptionPane.showInputDialog("Ange namn: ");  
           adress=JOptionPane.showInputDialog("Ange adress: "); 
           String sR4=JOptionPane.showInputDialog("Ange antal medlemmar: ");  
           antal1=Integer.parseInt(sR4); 
           IdeellForening if2=new IdeellForening(namn, adress, antal1);           
           JOptionPane.showMessageDialog(null,if1.toString());                
        
           
            // Användaren ändrar värdet på adressen via get och set metoderna
            Scanner scan=new Scanner(System.in);   // Skapa ett scanner objekt som hanterar input
            System.out.println("Ange adress");    // Be användaren mata in adressen
            adress = sc.nextLine();               // Spara ned och lagra inmatningen som användaren angett
            if1.setAdress(adress);                 // Använd Setmetoden för att lägga in inmatningen i variabeln
            JOptionPane.showMessageDialog(null,if1.getAdress());  // Visa den inmatade datan via en dialogbox
            
           
    }
    
}
